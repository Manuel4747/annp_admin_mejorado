.layout-wrapper {
    display: flex;
    min-height: 100vh;
}

.sidebar {
    width: 220px;
    background-color: #2c3e50;
    padding: 1rem;
    color: white;
}

.menu-vertical .ui-menuitem-link {
    color: white;
}

.layout-main {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.layout-topbar {
    background-color: #34495e;
    color: white;
    padding: 1rem;
}

.layout-content {
    flex: 1;
    padding: 2rem;
    background-color: #f4f4f4;
}

.footer {
    background-color: #ecf0f1;
    text-align: center;
    padding: 1rem;
}